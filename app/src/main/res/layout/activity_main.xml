<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A05BAD"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="197dp"
        android:layout_height="69dp"
        android:text='"Enter Time of the Day"'
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/timetextView"
        android:layout_width="174dp"
        android:layout_height="255dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="309dp"
        android:fontFamily="cursive"
        android:text="Time list: (&quot;Morning&quot;, &quot;Mid-morning&quot;, &quot;Afternoon&quot;, &quot;Mid-afternoon&quot;, &quot;Dinner&quot;, &quot;After dinner snack&quot;)"
        android:textColor="#FF9800"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/clickMeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeEditText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/clickMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="125dp"
        android:text="CLICK ME!"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/foodOptiontextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="112dp"
        android:text="Food option"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/clickMeButton"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>